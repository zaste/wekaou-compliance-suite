{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://wekaou.org/schemas/spoc-m/v2.5/core",
  "title": "SPOC-M Core Schema",
  "description": "Canonical JSON Schema for WEKAOU SPOC-M (Subject-Predicate-Object-Context-Mechanism) knowledge representations v2.5",
  "type": "object",
  "required": ["subject", "predicate", "object"],
  "properties": {
    "subject": {
      "type": "object",
      "description": "The entity about which knowledge is being represented",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the subject",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "description": "Ontological type of the subject",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "description": "Human-readable label"
        },
        "attributes": {
          "type": "object",
          "description": "Additional attributes of the subject"
        }
      }
    },
    "predicate": {
      "type": "object",
      "description": "The relationship or property being expressed",
      "required": ["relation"],
      "properties": {
        "relation": {
          "type": "string",
          "description": "The type of relationship",
          "minLength": 1
        },
        "modality": {
          "type": "string",
          "enum": ["necessity", "possibility", "actuality", "impossibility"],
          "description": "Modal qualification of the relation"
        },
        "temporality": {
          "type": "object",
          "properties": {
            "start": {"type": "string", "format": "date-time"},
            "end": {"type": "string", "format": "date-time"},
            "duration": {"type": "string"}
          }
        }
      }
    },
    "object": {
      "type": "object",
      "description": "The target entity or value of the relation",
      "required": ["value"],
      "properties": {
        "value": {
          "description": "The value or reference to another entity"
        },
        "type": {
          "type": "string",
          "description": "Type of the object value"
        },
        "unit": {
          "type": "string",
          "description": "Unit of measurement if applicable"
        }
      }
    },
    "context": {
      "type": "object",
      "description": "Contextual information framing the knowledge",
      "properties": {
        "domain": {
          "type": "string",
          "description": "Knowledge domain"
        },
        "scope": {
          "type": "string",
          "description": "Scope of applicability"
        },
        "perspective": {
          "type": "string",
          "description": "Point of view or perspective"
        },
        "environment": {
          "type": "object",
          "description": "Environmental conditions"
        }
      }
    },
    "mechanism": {
      "type": "object",
      "description": "The process or mechanism by which the relation holds",
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of mechanism"
        },
        "procedure": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Steps in the mechanism"
        },
        "causality": {
          "type": "string",
          "enum": ["causal", "correlational", "constitutive", "none"]
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Metadata about the SPOC-M statement itself",
      "properties": {
        "version": {
          "type": "string",
          "const": "2.5"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "author": {
          "type": "string"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "source": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}